{
  "name": "@jsldocker/root",
  "private": true,
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.18.4",
    "mdx-deck": "^3.0.13",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all build:*",
    "build:clean": "rm -rf ./docs",
    "build:all": "lerna run build",
    "build:copy": "mv packages/slides/public docs",
    "build:nojekyll": "touch .nojekyll && touch docs/.nojekyll",
    "build:gitdocs": "git add docs"
  }
}
