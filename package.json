{
  "name": "@jsldocker/root",
  "private": true,
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.18.4",
    "mdx-deck": "^3.0.13",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "build": "npm-run-all build:*",
    "build:clean": "rimraf ./docs",
    "build:all": "lerna run build",
    "build:copy": "rimraf ./docs && mkdirp docs && cpy packages/slides/public/* docs",
    "build:nojekyll": "touch .nojekyll && touch docs/.nojekyll",
    "build:wiki": "npm-run-all build:wiki:*",
    "build:wiki:copy": "./scripts/copy.sh",
    "build:wiki:sidebar": "./scripts/genSidebar.sh",
    "build:wiki:clean": "./scripts/cleanSlides.sh",
    "build:wiki:update": "./scripts/updateWiki.sh",
    "build:git": "git add docs wiki"
  },
  "dependencies": {
    "code-surfer": "^3.0.0-beta.1"
  }
}
