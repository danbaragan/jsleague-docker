{
  "name": "slides",
  "private": false,
  "author": "Sabin Marcu <sabinmarcu@gmail.com>",
  "version": "1.0.0",
  "main": "index.mdx",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:clean": "gatsby clean & rimraf decks && mkdir decks",
    "build:copy": "rm -rf decks/components && mkdir -p decks/components && cp -R components/* decks/components && echo 'Copied components'",
    "build:compile": "./scripts/compile.sh && echo 'Compiled slides'",
    "build:build": "gatsby build --prefix-paths",
    "start": "npm-run-all -p start:*",
    "start:compile": "nodemon -w slides -e mdx -x yarn build:compile",
    "start:copy": "nodemon -w components -e jsx -x yarn build:copy",
    "start:build": "gatsby develop --host 0.0.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "get-installed-path": "^4.0.8",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.19.4",
    "remote-origin-url": "^2.0.0",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "gatsby": "^2.18.0",
    "gatsby-theme-mdx-deck": "^3.0.13",
    "mdx-deck": "^3.0.13",
    "react": "^16.12.0",
    "rebass": "^4.0.7"
  }
}
